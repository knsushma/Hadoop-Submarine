    	<name>yarn.scheduler.maximum-allocation-mb</name>
    	<value>7000</value>
  	</property>

  	<property>
    	<name>yarn.scheduler.should-check-slow-nodes</name>
    	<value>false</value>
	</property>

  	<property>
    	<name>yarn.nodemanager.log-dirs</name>
